@model BrightLifeIMS.Web.Models.Entities.Inventory
@{
    ViewData["Title"] = "Edit Inventory";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-edit text-warning"></i>
                    Edit Inventory: @Model.Title
                </h2>
                <div>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                        <i class="fas fa-eye"></i> View Details
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <form asp-action="Edit" method="post" id="inventoryForm">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatorId" />
        <input type="hidden" asp-for="OwnerId" />
        <input type="hidden" asp-for="Version" />
        
        <div class="row">
            <!-- Basic Information -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-info-circle"></i> Basic Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">
                                Title <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Title" class="form-control" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TitleBn" class="form-label">Title (Bengali)</label>
                            <input asp-for="TitleBn" class="form-control" />
                            <span asp-validation-for="TitleBn" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DescriptionBn" class="form-label">Description (Bengali)</label>
                            <textarea asp-for="DescriptionBn" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="DescriptionBn" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CustomIdFormat" class="form-label">
                                Custom ID Format
                                <small class="text-muted">(for items in this inventory)</small>
                            </label>
                            <input asp-for="CustomIdFormat" class="form-control" />
                            <div class="form-text">Use {SEQUENCE:000000} for auto-incrementing numbers</div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="IsPublic" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsPublic" class="form-check-label">
                                        <i class="fas fa-globe"></i> Make this inventory public
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsActive" class="form-check-label">
                                        <i class="fas fa-check-circle"></i> Active
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Statistics -->
                <div class="card mt-3">
                    <div class="card-header">
                        <h5><i class="fas fa-chart-bar"></i> Statistics</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="text-center">
                                    <i class="fas fa-eye text-info fa-2x"></i>
                                    <h4>@Model.ViewsCount</h4>
                                    <small class="text-muted">Views</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center">
                                    <i class="fas fa-heart text-danger fa-2x"></i>
                                    <h4>@Model.LikesCount</h4>
                                    <small class="text-muted">Likes</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center">
                                    <i class="fas fa-box text-success fa-2x"></i>
                                    <h4>@(Model.Items?.Count ?? 0)</h4>
                                    <small class="text-muted">Items</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Custom Fields Configuration -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-cogs"></i> Custom Fields</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Warning:</strong> Changing field configurations may affect existing items.
                        </div>
                        
                        <!-- String Fields -->
                        <h6><i class="fas fa-font"></i> Text Fields</h6>
                        @for (int i = 1; i <= 3; i++)
                        {
                            <div class="mb-2 border rounded p-2">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" 
                                           name="CustomString@(i)State" value="true" 
                                           @(ViewData[$"CustomString{i}State"] != null && (bool)ViewData[$"CustomString{i}State"] ? "checked" : "") />
                                    <label class="form-check-label fw-bold">
                                        Text Field @i
                                    </label>
                                </div>
                                <input type="text" class="form-control form-control-sm mt-1" 
                                       name="CustomString@(i)Name" placeholder="Field Name" 
                                       value="@ViewData[$"CustomString{i}Name"]" />
                            </div>
                        }

                        <!-- Integer Fields -->
                        <h6 class="mt-3"><i class="fas fa-hashtag"></i> Number Fields</h6>
                        @for (int i = 1; i <= 3; i++)
                        {
                            <div class="mb-2 border rounded p-2">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" 
                                           name="CustomInt@(i)State" value="true" 
                                           @(ViewData[$"CustomInt{i}State"] != null && (bool)ViewData[$"CustomInt{i}State"] ? "checked" : "") />
                                    <label class="form-check-label fw-bold">
                                        Number Field @i
                                    </label>
                                </div>
                                <input type="text" class="form-control form-control-sm mt-1" 
                                       name="CustomInt@(i)Name" placeholder="Field Name" 
                                       value="@ViewData[$"CustomInt{i}Name"]" />
                            </div>
                        }

                        <!-- Boolean Fields -->
                        <h6 class="mt-3"><i class="fas fa-toggle-on"></i> Yes/No Fields</h6>
                        @for (int i = 1; i <= 3; i++)
                        {
                            <div class="mb-2 border rounded p-2">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" 
                                           name="CustomBool@(i)State" value="true" 
                                           @(ViewData[$"CustomBool{i}State"] != null && (bool)ViewData[$"CustomBool{i}State"] ? "checked" : "") />
                                    <label class="form-check-label fw-bold">
                                        Yes/No Field @i
                                    </label>
                                </div>
                                <input type="text" class="form-control form-control-sm mt-1" 
                                       name="CustomBool@(i)Name" placeholder="Field Name" 
                                       value="@ViewData[$"CustomBool{i}Name"]" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-warning btn-lg">
                        <i class="fas fa-save"></i> Update Inventory
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
