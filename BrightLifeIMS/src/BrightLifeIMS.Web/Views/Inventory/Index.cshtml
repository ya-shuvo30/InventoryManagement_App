@model IEnumerable<BrightLifeIMS.Web.Models.Entities.Inventory>
@{
    ViewData["Title"] = "Inventories";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Inventories</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Create New Inventory
        </a>
    </div>

    <div class="row">
        @foreach (var inventory in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@inventory.Title</h5>
                        <p class="card-text">
                            @(inventory.Description?.Length > 100 
                                ? inventory.Description.Substring(0, 100) + "..." 
                                : inventory.Description)
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-info">@(inventory.Items?.Count ?? 0) Items</span>
                            @if (inventory.IsPublic)
                            {
                                <span class="badge bg-success">Public</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Private</span>
                            }
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group btn-group-sm w-100">
                            <a asp-action="Details" asp-route-id="@inventory.Id" class="btn btn-primary">View</a>
                            <a asp-action="Edit" asp-route-id="@inventory.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="Items" asp-route-id="@inventory.Id" class="btn btn-info">Items</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h4>No inventories yet!</h4>
            <p>Click the "Create New Inventory" button to get started.</p>
        </div>
    }
</div>
